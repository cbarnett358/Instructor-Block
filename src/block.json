{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "cb/cb-instructors",
	"version": "0.1.0",
	"title": "Instructor Block",
	"category": "design",
	"icon": "groups",
	"description": "A block to show instructors",
	"supports": {
		"html": false
	},
	"textdomain": "cb-instructors",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
  	"keywords": ["instructors", "teachers", "people"],
     "attributes": {
	 "content": {
	   "type": "string",
	  "source": "html",
	  "selector": "p",
	   "align": {
		 "type": "string",
		 "default": "none"
	   },
	   "backgroundColor": {
		 "type": "string"
	   },
	   "textColor": {
		 "type": "string"
	   },

	   "cbLink": {
		 "type": "string",
		 "default": ""
	   },
	   "linkLabel": {
		 "type": "string",
		 "default": "Check it out!"
	   },
	   "hasLinkNofollow": {
		 "type": "boolean",
		 "default": false
	   },
	   "styles": [
		 {
		   "name": "default",
		   "label": "Default",
		   "isDefault": true
		 },
		 {
		   "name": "border",
		   "label": "Border"
		 }
	   ]
	 }
	 }
  }

